{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/b1000.schema.json",
  "title": "Bitcoin 1000 Puzzle Collection",
  "description": "256 Bitcoin puzzles where puzzle N has private key in range [2^(N-1), 2^N - 1]",
  "type": "object",
  "properties": {
    "author": {
      "$ref": "./definitions.schema.json#/$defs/author"
    },
    "metadata": {
      "type": ["object", "null"],
      "properties": {
        "source_url": {
          "type": ["string", "null"]
        },
        "total_puzzles": {
          "type": ["integer", "null"]
        },
        "solved_count": {
          "type": ["integer", "null"]
        },
        "with_pubkey_count": {
          "type": ["integer", "null"]
        }
      },
      "additionalProperties": true
    },
    "puzzles": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/puzzle"
      },
      "description": "Array of 256 puzzles"
    }
  },
  "required": ["puzzles"],
  "additionalProperties": true,
  "$defs": {
    "puzzle": {
      "type": "object",
      "description": "Single b1000 puzzle",
      "properties": {
        "address": {
          "$ref": "./definitions.schema.json#/$defs/address"
        },
        "prize": {
          "type": ["number", "null"],
          "description": "Prize amount in BTC"
        },
        "status": {
          "$ref": "./definitions.schema.json#/$defs/status"
        },
        "key": {
          "type": "object",
          "description": "Private key information",
          "properties": {
            "hex": {
              "type": ["string", "null"],
              "pattern": "^[a-f0-9]{64}$"
            },
            "wif": {
              "$ref": "./definitions.schema.json#/$defs/wif"
            },
            "seed": {
              "$ref": "./definitions.schema.json#/$defs/seed"
            },
            "mini": {
              "type": ["string", "null"]
            },
            "bits": {
              "type": ["integer", "null"],
              "minimum": 1,
              "maximum": 256,
              "description": "Bit length of private key (1-256 for b1000)"
            },
            "shares": {
              "$ref": "./definitions.schema.json#/$defs/shares"
            }
          },
          "required": ["bits"],
          "additionalProperties": true
        },
        "pubkey": {
          "$ref": "./definitions.schema.json#/$defs/pubkey"
        },
        "start_date": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
        },
        "solve_date": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
        },
        "solve_time": {
          "type": ["integer", "null"],
          "description": "Time to solve in seconds"
        },
        "pre_genesis": {
          "type": "boolean",
          "description": "True if puzzle was solved before puzzle creation (2015-01-15)"
        },
        "source_url": {
          "type": ["string", "null"]
        },
        "transactions": {
          "type": "array",
          "items": {
            "$ref": "./definitions.schema.json#/$defs/transaction"
          }
        },
        "solver": {
          "type": ["string", "null"],
          "description": "Solver ID reference"
        },
        "has_pubkey": {
          "type": ["boolean", "null"]
        }
      },
      "required": ["address", "status", "key"],
      "additionalProperties": true
    }
  }
}
